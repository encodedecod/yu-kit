{
  "compilerOptions": {
    "target": "ES2016",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "declarationDir": "./types",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "paths": {
      "@yu-kit/components": ["./packages/components/index.ts"],
      "@yu-kit/components/*": ["./packages/components/*"],
      "@yu-kit/hooks": ["./packages/hooks/index.ts"],
      "@yu-kit/hooks/*": ["./packages/hooks/*"],
      "@yu-kit/kit": ["./packages/kit/index.ts"],
      "@yu-kit/kit/*": ["./packages/kit/*"],
      "@yu-kit/utils": ["./packages/utils/index.ts"],
      "@yu-kit/utils/*": ["./packages/utils/*"],
      "@yu-kit/styles": ["./packages/styles"],
      "@yu-kit/styles/*": ["./packages/styles/*"]
    }
  },
  "include": ["packages", "docs/.vitepress/*.ts", "vitest.config.ts", "*.d.ts"],
  "exclude": ["node_modules", "**/**/*.md", "**/cli", "cli"]
}
