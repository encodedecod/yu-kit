{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["*.md", "!.vitepress/**"],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn"
  }
}
